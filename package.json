{
  "name": "aw-daily-reporter",
  "version": "0.3.0",
  "description": "A tool that categorizes and visualizes life logs collected by ActivityWatch on two axes: \"Project x Category\", and supports AI-based daily report creation.",
  "main": "index.js",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "scripts": {
    "lint:py": "poetry run ruff check",
    "format:py": "poetry run ruff format",
    "format:py:check": "poetry run ruff format --check",
    "typecheck:py": "poetry run mypy aw_daily_reporter tests",
    "test:py": "poetry run pytest",
    "lint:frontend": "pnpm --filter frontend lint",
    "typecheck:frontend": "pnpm --filter frontend type-check",
    "build:frontend": "pnpm --filter frontend build",
    "lint": "pnpm run lint:py && pnpm run format:py:check && pnpm run lint:frontend",
    "typecheck": "pnpm run typecheck:py && pnpm run typecheck:frontend",
    "test:frontend": "pnpm --filter frontend test",
    "test:frontend:coverage": "pnpm --filter frontend test:coverage",
    "test:e2e": "pnpm --filter frontend test:e2e",
    "test:e2e:ui": "pnpm --filter frontend test:e2e:ui",
    "test:e2e:headed": "pnpm --filter frontend test:e2e:headed",
    "test:e2e:debug": "pnpm --filter frontend test:e2e:debug",
    "test:e2e:report": "pnpm --filter frontend test:e2e:report",
    "check:rules": "pnpm --filter frontend check:rules",
    "test": "pnpm run test:py && pnpm run test:frontend:coverage",
    "security:py": "poetry export -f requirements.txt -o requirements.txt --without-hashes && pip-audit -r requirements.txt --desc",
    "security:npm": "pnpm audit --audit-level moderate",
    "security": "pnpm run security:py && pnpm run security:npm",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aromarious/aw-daily-reporter.git"
  },
  "keywords": [],
  "author": "",
  "license": "MPL-2.0",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/aromarious/aw-daily-reporter/issues"
  },
  "homepage": "https://github.com/aromarious/aw-daily-reporter#readme",
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  },
  "lint-staged": {
    "**/*.py": [
      "poetry run ruff check --fix",
      "poetry run ruff format"
    ],
    "aw_daily_reporter/web/frontend/**/*.{js,jsx,ts,tsx}": [
      "pnpm --filter frontend exec ultracite fix --unsafe"
    ]
  },
  "packageManager": "pnpm@9.15.0+sha512.76e2379760a4328ec4415815bcd6628dee727af3779aaa4c914e3944156c4299921a89f976381ee107d41f12cfa4b66681ca9c718f0668fa0831ed4c6d8ba56c"
}
